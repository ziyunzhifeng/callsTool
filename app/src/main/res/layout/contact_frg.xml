<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="基础姓名:"
            android:gravity="center|left"
            />
        <EditText
            android:id="@+id/contact_baseName_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Aaron"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="基础号码:"
            android:gravity="center|left"
            />
        <EditText
            android:id="@+id/contact_baseNum_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="15901010000"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="家庭住址:"
            android:gravity="center|left"
            />
        <EditText
            android:id="@+id/contact_address_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="北京市朝阳区"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="电子邮件:"
            android:gravity="center|left"
            />
        <EditText
            android:id="@+id/contact_email_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Aaron@gmail.com"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="创建个数:"
            android:gravity="center|left"
            />
        <EditText
            android:id="@+id/contact_create_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="100"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ProgressBar
            android:id="@+id/contact_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <Button
        android:id="@+id/contact_create_bt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="创建"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/bg_rectangle_with_stroke"
        />

</LinearLayout>